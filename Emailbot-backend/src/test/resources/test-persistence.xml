<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="emailbotPUTest" transaction-type="JTA">
        <jta-data-source>jdbc/arquillian</jta-data-source>
        <class>com.tool.emailbot.persistence.aa.Rol</class>
        <class>com.tool.emailbot.persistence.aa.Usuario</class>
        <class>com.tool.emailbot.persistence.domain.Aprovacion</class>
        <class>com.tool.emailbot.persistence.domain.Dependencia</class>
        <class>com.tool.emailbot.persistence.domain.InformacionContacto</class>
        <class>com.tool.emailbot.persistence.domain.Persona</class>
        <class>com.tool.emailbot.persistence.domain.Peticion</class>
        <class>com.tool.emailbot.persistence.domain.Trabajador</class>
        <class>com.tool.emailbot.persistence.history.Auditoria</class>
        <class>com.tool.emailbot.persistence.history.domain.AprovacionHistoria</class>
        <class>com.tool.emailbot.persistence.history.domain.PeticionHistoria</class>
        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="javax.persistence.validation.mode" value="callback, ddl"/>
        </properties>
    </persistence-unit>
</persistence>
